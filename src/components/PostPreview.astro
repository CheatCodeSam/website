---
import { Image } from '@astrojs/image/components';
import type { MarkdownInstance } from 'astro';
import type { Post } from '../types';
import Tag from './Tag.astro';
import TimeLabel from './TimeLabel.svelte';

const post: MarkdownInstance<Post> = Astro.props.post;
const description = post.frontmatter.description ?? getDescriptionFromPostContent();
// For example: Dec 06
const formattedDate = new Date(post.frontmatter.createdAt).toLocaleDateString('en-US', {
  month: 'short',
  day: '2-digit',
});

function getDescriptionFromPostContent(): string {
  const maxLength = 160;
  const rawText = post.compiledContent().replace(/<\/?[^>]+(>|$)/g, '');

  // Return the raw text content of the post if its lenght doesn't exceed the description's max length.
  if (rawText.length <= maxLength) {
    return rawText;
  }

  // Truncate the text to the last word within the length limit and add dots to show that the text continues.
  const truncated = rawText.slice(0, 160);
  return truncated.substring(0, truncated.lastIndexOf(' ')) + 'â€¦';
}
---

<li class="post-preview">
  <TimeLabel
    className="time-label"
    date={new Date(post.frontmatter.createdAt)}
    monthFormat={'short'}
    dayFormat={'2-digit'}
  />

  <div>
    <div class="preview-content">
      <!-- This link is enlarged to fit the whole card using an absolutely positioned pseudo element. -->
      <a class="post-link" href={post.url}></a>

      <h2 class="title">
        <a href={post.url}>{post.frontmatter.title}</a>
      </h2>

      {
        post.frontmatter.tags && (
          <ul class="tags">
            {post.frontmatter.tags.map((tag) => (
              <Tag className="post-tag" name={tag} type="blog" />
            ))}
          </ul>
        )
      }

      <p class="description"><a href={post.url}>{description}</a></p>
    </div>

    {
      post.frontmatter.thumbnail && (
        <a class="thumbnail" href={post.url}>
          <Image
            src={post.frontmatter.thumbnail.src}
            alt={post.frontmatter.thumbnail.alt}
            width={post.frontmatter.thumbnail.width}
            height={post.frontmatter.thumbnail.height}
            format={post.frontmatter.thumbnail.format}
            aspectRatio={post.frontmatter.thumbnail.aspectRatio}
          />
        </a>
      )
    }
  </div>
</li>

<style lang="scss">
  $gap: 1rem;
  $borderRadius: 0.6rem;
  $timeLabelWidth: 6ch;

  .post-preview {
    display: flex;
    gap: $gap;
    list-style: none;
    color: black;

    ul.tags {
      display: flex;
      padding: 0 1rem;
      margin: 0.25rem 0;
      gap: 2ch;
      flex-wrap: wrap;
    }
  }

  a {
    color: inherit;
    text-decoration: none;

    &.post-link::before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      z-index: 0;
    }
  }

  .time-label {
    margin-top: 1rem;
    display: block;
    color: #666666;
    min-width: $timeLabelWidth;
  }

  .post-preview > div {
    flex: 1;
    display: flex;
    gap: 1rem;
    width: calc(100% - $timeLabelWidth - $gap); // The full width minus the width of the time label
    box-sizing: border-box;
  }

  .preview-content {
    position: relative;
    flex: 1;
    padding: 1rem 0;
    text-decoration: none;
    border-radius: $borderRadius;
    background-color: white;
    color: #111;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    transition: box-shadow 200ms;

    &:hover {
      box-shadow: 0 0 1rem #dddddd;

      h2.title {
        color: var(--accent);
      }
    }

    h2.title,
    p.description {
      padding: 0 1rem;
      margin: 0;
      box-sizing: border-box;
    }
  }

  h2.title,
  .post-tag,
  p.description {
    z-index: 1;
  }

  .thumbnail {
    max-width: calc(50% - $gap / 2); // Half of the parent's size
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    border-radius: $borderRadius;
    transition: box-shadow 200ms;

    &:hover {
      box-shadow: 0 0 1rem #dddddd;
    }

    img {
      width: auto;
      height: 100%;
      max-height: 16rem;
      border-radius: $borderRadius;
      margin: 0;
      padding: 0;
    }
  }

  h2.title {
    margin: 0;
    font-size: 1.25rem;
    transition: color 200ms;
  }

  p.description {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: #444;
  }

  @media only screen and (max-width: 640px) {
    .post-preview > div {
      flex-direction: column;
    }

    .thumbnail {
      max-width: 100%;
      height: auto;
    }
  }
</style>
