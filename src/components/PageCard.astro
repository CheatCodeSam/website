---
import { Image } from '@astrojs/image/components';
import type { CollectionEntry } from 'astro:content';
import { getDescriptionFromText, slugToRoute } from '../utils';
import Tag from './Tag.astro';
import TimeLabel from './TimeLabel.svelte';

const page: CollectionEntry<'blog'> | CollectionEntry<'projects'> = Astro.props.page;
const description = page.data.description ?? getDescriptionFromText(page.body, 160);
const pageUrl = page.data.url || slugToRoute(page.slug, page.collection);
---

<li class="card">
  <TimeLabel className="time-label" date={new Date(page.data.createdAt)} monthFormat={'short'} dayFormat={'2-digit'} />

  <div>
    <div class="card-content">
      <!-- This link is enlarged to fit the whole card using an absolutely positioned pseudo element. -->
      <a class="card-link" href={pageUrl} aria-label={`Read blog post titled: "${page.data.title}`}></a>

      <h2 class="title">
        <a href={pageUrl}>{page.data.title}</a>
      </h2>

      {
        page.data.tags && (
          <ul class="tags">
            {page.data.tags.map((tag) => (
              <li class="tags-item">
                <Tag name={tag} type="blog" />
              </li>
            ))}
          </ul>
        )
      }

      <p class="description"><a href={pageUrl}>{description}</a></p>
    </div>

    {
      page.data.thumbnail && (
        <a class="thumbnail" href={pageUrl}>
          <Image
            src={page.data.thumbnail.src}
            alt={page.data.thumbnail.alt}
            width={page.data.thumbnail.width}
            height={page.data.thumbnail.height}
            format={page.data.thumbnail.format}
          />
        </a>
      )
    }
  </div>
</li>

<style lang="scss">
  $gap: 1rem;
  $borderRadius: 0.6rem;
  $timeLabelWidth: 6ch;

  .card {
    display: flex;
    gap: $gap;
    list-style: none;
    color: var(--text-color-1);
  }

  ul.tags {
    display: flex;
    padding: 0 1rem;
    margin: 0.25rem 0;
    gap: 2ch;
    flex-wrap: wrap;

    li.tags-item {
      list-style: none;
      padding: 0;
      margin: 0;
    }
  }

  .card a {
    display: block;
    color: var(--text-color-1);
    text-decoration: none;

    &.card-link::before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      z-index: 0;
    }
  }

  .time-label {
    margin-top: 1rem;
    display: block;
    color: rgba(var(--text-color-2), 0.8);
    min-width: $timeLabelWidth;
  }

  .card > div {
    flex: 1;
    display: flex;
    gap: 1rem;
    width: calc(100% - $timeLabelWidth - $gap); // The full width minus the width of the time label
    box-sizing: border-box;
  }

  .card-content {
    position: relative;
    flex: 1;
    padding: 1rem 0;
    text-decoration: none;
    border-radius: $borderRadius;
    background-color: var(--bg-2);
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    transition: box-shadow 200ms;

    &:hover {
      box-shadow: 0 0 1rem rgb(var(--accent-1-rgb), 0.25);

      h2.title {
        color: var(--accent-1);
      }
    }

    h2.title,
    p.description {
      padding: 0 1rem;
      margin: 0;
      box-sizing: border-box;
    }
  }

  h2.title,
  li.tags-item,
  p.description {
    z-index: 1;
  }

  .thumbnail {
    max-width: calc(50% - $gap / 2); // Half of the parent's size
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    border-radius: $borderRadius;
    transition: box-shadow 200ms;

    &:hover {
      box-shadow: 0 0 1rem rgb(var(--accent-1-rgb), 0.25);
    }

    img {
      width: auto;
      height: 100%;
      max-height: 16rem;
      border-radius: $borderRadius;
      margin: 0;
      padding: 0;
    }
  }

  h2.title {
    margin: 0;
    font-size: 1.25rem;
    transition: color 200ms;
  }

  p.description {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: #444;
  }

  @media only screen and (max-width: 640px) {
    .card > div {
      flex-direction: column;
    }

    .thumbnail {
      max-width: 100%;
      height: auto;
    }
  }
</style>
